<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
     dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_start_of_the_week_list_titles"
        android:entryValues="@array/pref_start_of_the_week_list_titles"
        android:key="@string/pref_key_start_of_the_week"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_start_of_the_week" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_show_week_number"
        android:title="@string/pref_title_show_week_number" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="3"
        android:entries="@array/pref_default_event_duration_titles"
        android:entryValues="@array/pref_default_event_duration_values"
        android:key="@string/pref_key_default_event_duration"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_default_event_duration" />

</PreferenceScreen>
